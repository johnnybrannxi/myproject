    color: #FFFFFF;
    letter-spacing: .150em;
    margin-top: 20px;
    -webkit-animation-delay: 1.5s;
    animation-delay: 1.5s;
}

.slider-content-style .content a.thm-btn {
    background: rgb(244,98,58);
    display: inline-block;
    vertical-align: middle;
    color: rgb(255,255,255);
    font-size: 18px;
    letter-spacing: .1em;
