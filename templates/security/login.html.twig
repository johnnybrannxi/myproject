<!DOCTYPE html>
<html>

    <head>
        <link href="https://bootswatch.com/4/lumen/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="assets/css/main.css" />
    <link rel="icon" type="image/png" href="/images/products/favicon.png" />
    <!--[if IE]><link rel="shortcut icon" type="image/x-icon"href="favicon.ico" /><![endif]--> <noscript>
        <link rel="stylesheet" href="assets/css/noscript.css" /></noscript>
    </head>

    <body class="row">



<div class="col-md-4"></div>



<div class="col-md-4 container" style="margin-top:80px;padding:20px;border:1px solid grey;border-radius:10px;">

    {% if error %}

    <div class="alert alert-dismissible alert-danger mt-4 mb-4">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        {{ error.messageKey | trans(error.messagedata, 'security') }}
    </div>

    {% endif %}

    <h1 class="mb-4 text-center small">Connectez-vous!</h1>

    <div class="text-center mb-4">

        <img src="/images/products/codes-logo.png" alt="" />

    </div>

    
    <form action="{{ path('login') }}" method="POST">


        <div class="form-group col-md-12">
            <label for="username">Nom d'utilisateur</label>

            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}" />
        </div>

        <div class="form-group col-md-12">
            <label for="password">Mot de passe</label>

            <input type="password" id="password" name="_password" class="form-control" />
        </div>


        <div class="text-center mt-4">
        <button type="submit" class="btn btn-success">Se connecter</button>
        </div>    
        <br />
        <br />

    </form>

</div>


<div class="col-md-4"></div>



</body>



</html>


